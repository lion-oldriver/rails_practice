<div class="col-md-2 px-2 justify-content-center">
  <div>
    <h2>Search</h2>
    <%= render "searches/form" %>
  </div>
  <div>
    <h2>フォロー</h2>
    <div class="d-flex flex-row flex-wrap col-9 mx-auto">
    <% users.each do |user| %>
      <div class="w-50 px-1">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, :fill,60,60,fallback:"img/no_image.jpg", size:'60x60' %>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="mt-3">
    <h2>カテゴリ</h2>
    <table class="table">
      <tbody>
        <% categories.each do |category| %>
        <tr>
          <td>
            <%= link_to category.first, search_path(:model => "category", :method => "perfect", :content => category.first ) %> (<%= category.second %>)
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>