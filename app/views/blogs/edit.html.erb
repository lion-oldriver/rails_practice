<div class="row">
  <div class="col-2 mb-3 mx-auto">
    <h2>編集画面</h2>
    <%= form_with model: @blog,local: true do |f| %>
      <div>
        <label>画像</label>
        <%= f.attachment_field :image %>
      </div>
      <div>
        <label class="mt-2">タイトル</label>
        <%= f.text_field :title %>
      </div>
      <div>
        <label class="mt-2">本文</label>
        <%= f.text_area :body %>
      </div>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
  </div>
</div>