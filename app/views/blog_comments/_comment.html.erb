<table class="table">
  <tbody>
    <% blog.blog_comments.each do |blog_comment| %>
    <tr>
      <td>
        <%= attachment_image_tag blog_comment.user, :profile_image, :fill,60,60 %>
      </td>
      <td class="col-1"><%= blog_comment.user.name %></td>
      <td class="col-8"><%= blog_comment.comment %></td>
      <% if blog_comment.user_id == current_user.id %>
        <td class="col-2">
          <%= link_to "削除", blog_blog_comment_path(blog_comment.blog,blog_comment), method: :delete, remote: true, class: "btn btn-danger btn-sm" %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>