<% if current_user.following?(user) %>
  <%= link_to "unfollow", user_relationships_path(user.id), method: :delete,remote: true, class: "btn btn-danger btn-sm" %>
<% else %>
  <%= link_to "follow", user_relationships_path(user.id), method: :post,remote: true, class: "btn btn-success btn-sm" %>
<% end %>